@model List<Medicament>
<div class="container">
    <h1 class="mt-3">Index</h1>

    <ul class="list-group mt-3">
        @foreach (Medicament med in ViewBag.MedicamentsList)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>Numero:</strong> @med.Numero |
                    <strong>NomFabriquant:</strong> @med.NomFabriquant |
                    <strong>DateExpiration:</strong> @med.DateExpiration |
                </div>
                <form method="post" asp-controller="Medicament" asp-action="Supprimer" onsubmit="return confirm('Are you sure you want to delete this Medicament?');">
                    <input type="hidden" name="Numero" value="@med.Numero" />
                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </li>
        }
    </ul>

    @if (ViewBag.DeletedMedicament.Count > 0)
    {
        <div class="mt-3">
            <h2>Deleted Medicament</h2>
            <ul class="list-group">
                @foreach (Medicament deletedMed in ViewBag.DeletedMedicament)
                {
                    <li class="list-group-item">
                        <strong>Numero:</strong> @deletedMed.Numero |
                        <strong>Type:</strong> @deletedMed.NomFabriquant |
                        <strong>Etage:</strong> @deletedMed.DateExpiration |
                    </li>
                }
            </ul>
        </div>
    }

    <a class="btn btn-primary mt-3" asp-controller="Medicament" asp-action="Ajouter">Ajouter un Medicament</a>
    <a class="btn btn-primary mt-3" asp-controller="Medicament" asp-action="Modifier">Modifier un Medicament</a>
    <a class="btn btn-primary mt-3" asp-controller="Medicament" asp-action="Afficher">Afficher les Medicaments de Pfizer</a>
</div>
